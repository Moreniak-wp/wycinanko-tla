{
  "manifest_version": 3,
  "name": "WP Ad Inspector",
  "version": "30.2",
  "description": "Zaawansowany bloker reklam z filtrowaniem kosmetycznym i sieciowym.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "proxy",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_icon": {
      "16": "pliki/icons/icon16_inactive.png",
      "32": "pliki/icons/icon32_inactive.png",
      "48": "pliki/icons/icon48_inactive.png",
      "128": "pliki/icons/icon128_inactive.png"
    },
    "default_title": "WP Ad Inspector",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "pliki/icons/icon16_active.png",
    "32": "pliki/icons/icon32_active.png",
    "48": "pliki/icons/icon48_active.png",
    "128": "pliki/icons/icon128_active.png"
  },
  "content_scripts": [
    {
      "id": "injector",
      "matches": ["<all_urls>"],
      "js": ["injector.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "id": "remover",
      "matches": ["<all_urls>"],
      "js": ["remover.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
